<CustBoxLayout@BoxLayout>:
    size_hint_y: 1
    spacing: 1

<CustButton@Button>:
    font_size: 50
    background_normal: ""
    background_down: ""
    background_color: 0.4, 0.4, 0.4, 1
    color: 1, 1, 1, 1

<OrangeButton@CustButton>:
    background_color: 1, 0.5, 0, 1
    color: 1, 1, 1, 1

<CalculatorLayout>:
    display: display
    orientation: "vertical"
    spacing: 1
    TextInput:
        id: display
        font_size: 75
        background_normal: ""
        background_color: 0.15, 0.15, 0.15, 1
        color: 0, 0, 0, 1

    CustBoxLayout:
        CustButton:
            text: "AC"
        CustButton:
            text: "("
            on_press: display.text += self.text
        CustButton:
            text: ")"
            on_press: display.text += self.text
        OrangeButton:
            text: "/"
            on_press: display.text += self.text

    CustBoxLayout:
        CustButton:
            text: "7"
            on_press: display.text += self.text
        CustButton:
            text: "8"
            on_press: display.text += self.text
        CustButton:
            text: "9"
            on_press: display.text += self.text
        OrangeButton:
            text: "*"
            on_press: display.text += self.text


    CustBoxLayout:
        CustButton:
            text: "4"
            on_press: display.text += self.text
        CustButton:
            text: "5"
            on_press: display.text += self.text
        CustButton:
            text: "6"
            on_press: display.text += self.text
        OrangeButton:
            text: "-"
            on_press: display.text += self.text

    CustBoxLayout:
        CustButton:
            text: "1"
            on_press: display.text += self.text
        CustButton:
            text: "2"
            on_press: display.text += self.text
        CustButton:
            text: "3"
            on_press: display.text += self.text
        OrangeButton:
            text: "+"
            on_press: display.text += self.text

    CustBoxLayout:
        CustButton:
            text: "0"
            size_hint_x: 2
        CustButton:
            text: "."
        OrangeButton:
            text: "="
            on_press: root.calculate(display.text)